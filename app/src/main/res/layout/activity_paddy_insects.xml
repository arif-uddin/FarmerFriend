                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="লেদা পোকা"
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ভিরতাকো/\nকোরাজেল/\nনাইট্রো"
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="৯ মি.লি./\n৬০ মি.লি."
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/oneBigha"
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#fff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="18sp">

                    </TextView>

                </TableRow>

            </TableLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/paddy14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>